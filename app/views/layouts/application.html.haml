!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Eudaemonia
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %p.notice= notice
    %p.alert= alert

    %ul.navigation
      %li= link_to("Dashboard", dashboard_index_path, data: {:"turbolinks-action" => "replace"})
      %li= link_to("Reports", reports_path, data: {:"turbolinks-action" => "replace"})
    = yield
